    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.app.main:app",
                "--reload",
                "--log-level",
                "debug"
            ],
            "jinja": false,
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            // Config to load environment variables from .env file.
            // You can have multiple configurations if you have many environments.
            "envFile": "${workspaceFolder}/.env",
        }
    ]
}